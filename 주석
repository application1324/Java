package ch1;

public class _04_Comment {
	
	public static void main(String[] args) {
		// //의 이름은 주석으로 컴퓨터가 컴파일 하는 부분에서 빠지겠다라는 뜻이다(표시하지 않음).
		
//		System.out.println("(10분후) 잠시 후 특강이 시작됩니다. 학생여러분 작석을 부탁드립니다.");
//		System.out.println("(5분전) 잠시 후 특강이 시작됩니다. 학생여러분 착석을 부탁드립니다.");
		System.out.println("지금부터 특강을 시작하겠습니다.");
		
//		프로그래머의 의도를 주석으로 나태어 다른 사람이 봤을 떄 이해하기 쉽도록 주석을 활용할 수 있다.
		int size = 120;
		size = size + 10; // 어린이는 발이 빨리 자라기 떄문에 사이즈 10만큼 더 큰 신발을 구매할려고 한다.
		System.out.println("신발 사이즈 " + size + "으로 보여주세요");
		
		//한줄 주석: // 사용, ctrl + shift + c or ctrl + /
		//여러줄 주석: /**/ 사용, 블럭설정후 ctrl + shift + / 
		
//		int a = 10;
//		int b = 20;
//		System.out.println(a + b);
		
	}
}
